{
    "$id": "https://schemas.composeum.io/core/item",
    "$ref": "https://schemas.composeum.io/core/item#/definitions/Item",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Item": {
            "additionalProperties": false,
            "properties": {
                "componentType": {
                    "type": "string"
                },
                "itemId": {
                    "type": "string"
                },
                "properties": {
                    "$ref": "https://schemas.composeum.io/core/item#/definitions/Properties"
                },
                "slots": {
                    "$ref": "https://schemas.composeum.io/core/item#/definitions/Slots"
                }
            },
            "required": [
                "componentType",
                "itemId",
                "properties"
            ],
            "type": "object"
        },
        "Properties": {
            "additionalProperties": {
                "anyOf": [
                    {
                        "additionalProperties": true,
                        "properties": {},
                        "type": "object"
                    },
                    {
                        "items": {},
                        "type": "array"
                    },
                    {
                        "type": [
                            "string",
                            "number",
                            "boolean"
                        ]
                    }
                ]
            },
            "type": "object"
        },
        "Slots": {
            "additionalProperties": {
                "items": {
                    "$ref": "https://schemas.composeum.io/core/item#/definitions/Item"
                },
                "type": "array"
            },
            "type": "object"
        }
    }
}

