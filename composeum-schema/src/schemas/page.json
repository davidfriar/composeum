{
    "$id": "https://schemas.composeum.io/core/page",
    "$ref": "https://schemas.composeum.io/core/page#/definitions/Page",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Item": {
            "additionalProperties": false,
            "properties": {
                "componentType": {
                    "type": "string"
                },
                "itemId": {
                    "type": "string"
                },
                "properties": {
                    "$ref": "https://schemas.composeum.io/core/page#/definitions/Properties"
                },
                "slots": {
                    "$ref": "https://schemas.composeum.io/core/page#/definitions/Slots"
                }
            },
            "required": [
                "componentType",
                "itemId",
                "properties"
            ],
            "type": "object"
        },
        "Page": {
            "additionalProperties": false,
            "properties": {
                "children": {
                    "items": {
                        "$ref": "https://schemas.composeum.io/core/page#/definitions/Page"
                    },
                    "type": "array"
                },
                "content": {
                    "$ref": "https://schemas.composeum.io/core/page#/definitions/Item"
                },
                "lastModified": {
                    "format": "date-time",
                    "type": "string"
                },
                "path": {
                    "type": "string"
                }
            },
            "required": [
                "content",
                "lastModified",
                "path"
            ],
            "type": "object"
        },
        "Properties": {
            "additionalProperties": {
                "anyOf": [
                    {
                        "additionalProperties": true,
                        "properties": {},
                        "type": "object"
                    },
                    {
                        "items": {},
                        "type": "array"
                    },
                    {
                        "type": [
                            "string",
                            "number",
                            "boolean"
                        ]
                    }
                ]
            },
            "type": "object"
        },
        "Slots": {
            "additionalProperties": {
                "items": {
                    "$ref": "https://schemas.composeum.io/core/page#/definitions/Item"
                },
                "type": "array"
            },
            "type": "object"
        }
    }
}

