{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "resolveJsonModule": true,
    "typeRoots": [
      "../node_modules/@types"
    ]
  }
}
